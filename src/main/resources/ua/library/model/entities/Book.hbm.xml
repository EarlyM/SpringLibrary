<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ua.library.model.entities.Book" table="book" schema="spring_library">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <many-to-one class="ua.library.model.entities.Author" fetch="join" name="author" lazy="false">
            <column name="author_id" not-null="true"/>
        </many-to-one>

        <many-to-one name="genre" class="ua.library.model.entities.Genre" fetch="join" lazy="false">
            <column name="genre_id" not-null="true"/>
        </many-to-one>

        <many-to-one name="publisher" class="ua.library.model.entities.Publisher" fetch="join" lazy="false">
            <column name="publisher_id" not-null="true"/>
        </many-to-one>

        <property name="name" type="java.lang.String">
            <column name="name" length="45" not-null="true"/>
        </property>

        <property name="content" type="binary" lazy="true">
            <column name="content" not-null="true"/>
        </property>

        <property name="pageCount" type="java.lang.Integer">
            <column name="page_count" not-null="true"/>
        </property>

        <property name="isbn" type="java.lang.String">
            <column name="isbn" length="100" unique="true" not-null="true"/>
        </property>

        <property name="publishYear" type="java.lang.Integer">
            <column name="publish_year" not-null="true"/>
        </property>

        <property name="image" type="binary" lazy="true">
            <column name="image" not-null="true"/>
        </property>

    </class>
</hibernate-mapping>